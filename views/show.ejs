<% include ./partials/header %>

<div class="ui main text container segment">
  <div class="ui huge header"><%= blog.title %>
    <div class="ui right floated button">
      <a href="/blogs">Back</a>
    </div>  
  </div>
  <div class="ui top attached">
    <div class="item">
      <img src="<%= blog.image %>" alt="" class="ui centered rounded image">
    </div>
    <div class="content">
      <span><%= blog.created.toDateString() %></span>
    </div>
    <div class="description">
      <p><%- blog.body %></p>
      <a href="/blogs/<%= blog._id%>/edit" class="ui blue basic button">Edit</a>
        <form action="/blogs/<%= blog._id %>?_method=DELETE" id="delete" method="POST">
          <input type="submit" class="ui red basic button" value="Delete">
        </form>
    </div>
  </div>
</div>

<% include ./partials/footer %>